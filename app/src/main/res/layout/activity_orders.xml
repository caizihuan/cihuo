<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_orders"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dell.cihuo0.OrdersActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:background="#ff7b7b">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/back_whitesmall"
            android:id="@+id/Iv_ordersacty_back"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="match_parent"
            android:text="我的订单"
            android:gravity="center_vertical"
            android:textColor="#ffffff"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="全部"
            android:textSize="@dimen/orders_lietextsize"
            android:textColor="#464646"
            android:background="#ffffff"
            android:gravity="center"
            android:id="@+id/Tv_ordersacty_all"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="待付款"
            android:textSize="@dimen/orders_lietextsize"
            android:textColor="#464646"
            android:background="#ffffff"
            android:gravity="center"
            android:id="@+id/Tv_ordersacty_nomoney"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="待发货"
            android:textSize="@dimen/orders_lietextsize"
            android:textColor="#464646"
            android:background="#ffffff"
            android:gravity="center"
            android:id="@+id/Tv_ordersacty_nogive"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="待收货"
            android:textSize="@dimen/orders_lietextsize"
            android:textColor="#464646"
            android:background="#ffffff"
            android:gravity="center"
            android:id="@+id/Tv_ordersacty_noget"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="待评价"
            android:textSize="@dimen/orders_lietextsize"
            android:textColor="#464646"
            android:background="#ffffff"
            android:gravity="center"
            android:id="@+id/Tv_ordersacty_estimate"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="13"
        android:background="#efeded"
        android:id="@+id/orders_banner">
    </FrameLayout>


</LinearLayout>
