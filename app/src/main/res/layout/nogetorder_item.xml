<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9e9e9">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/orderitem_height"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_marginTop="@dimen/orderitem_margintop">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:padding="@dimen/order_padding"
            android:background="#ffe1e1">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="match_parent"
                android:id="@+id/Iv_nogetOrderitem_image"/>
            <TextView
                android:id="@+id/Tv_nogetOrderitem_desc"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:textColor="#434343"
                android:gravity="left"
                android:layout_marginLeft="@dimen/order_desc_marginleft"
                android:layout_marginRight="@dimen/order_desc_marginright"/>
            <TextView
                android:id="@+id/Tv_nogetOrderitem_price"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="#434343"
                android:gravity="right"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="@dimen/order_buttonline_padding">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="match_parent" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/order_buttonstyle"
                android:layout_marginRight="@dimen/order_button"
                android:text="延长收货"
                android:textColor="#484747"
                android:textSize="@dimen/order_button_textsize" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/order_buttonstyle"
                android:layout_marginRight="@dimen/order_button"
                android:text="查看物流"
                android:textColor="#484747"
                android:textSize="@dimen/order_button_textsize" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/querenbtn_style"
                android:text="确认收货"
                android:textColor="#ffffff"
                android:textSize="@dimen/order_button_textsize" />

        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/fengexian"
            android:background="#d2d2d2"/>

    </LinearLayout>

</LinearLayout>