<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f8f8">
    //定义一个ImageView，用于作为列表项的一部分
    <ImageView
        android:id="@+id/image"
        android:layout_height="170dp"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_gravity="center"/>
    //定义一个TextView，作为列表项的一部分
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/desc"
        android:textColor="#000000"
        android:layout_marginLeft="@dimen/simpleitem_desc_marginleft"
        android:layout_marginTop="@dimen/simpleitem_desc_margintop"/>
    //定义一个TextView，作为列表项的一部分
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff0000"
        android:id="@+id/price"
        android:layout_marginLeft="@dimen/simpleitem_price_marginleft"
        android:layout_marginTop="@dimen/simpleitem_price_margintop"
        android:layout_marginBottom="@dimen/simpleitem_price_marginbottom"/>
</LinearLayout>