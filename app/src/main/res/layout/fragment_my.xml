<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ffabab">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/touxiang"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#ffffff"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/myfragment_llpadding"
                android:layout_marginBottom="@dimen/myfragment_Ll_marginBottom"
                android:layout_marginTop="@dimen/myfragment_Ll_marginTop">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content"
                    android:text="我的头像"
                    android:textSize="@dimen/my_item_textsize"
                    android:layout_gravity="left"
                    android:textColor="#000000"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/enter_black"
                    android:layout_gravity="right"/>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/fengexian"
                android:background="#c2c1c1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/myfragment_llpadding"
                android:layout_marginBottom="@dimen/myfragment_Ll_marginBottom"
                android:layout_marginTop="@dimen/myfragment_Ll_marginTop">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content"
                    android:text="会员名"
                    android:textSize="@dimen/my_item_textsize"
                    android:textColor="#000000"
                    android:layout_gravity="left"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/enter_black"
                    android:layout_gravity="right"/>

            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/fengexian"
                android:background="#c2c1c1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/myfragment_llpadding"
                android:layout_marginBottom="@dimen/myfragment_Ll_marginBottom"
                android:layout_marginTop="@dimen/myfragment_Ll_marginTop">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content"
                    android:text="昵称"
                    android:textSize="@dimen/my_item_textsize"
                    android:textColor="#000000"
                    android:layout_gravity="left"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/enter_black"
                    android:layout_gravity="right"/>

            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/fengexian"
                android:background="#c2c1c1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/myfragment_llpadding"
                android:layout_marginBottom="@dimen/myfragment_Ll_marginBottom"
                android:layout_marginTop="@dimen/myfragment_Ll_marginTop"
                android:id="@+id/Lv_myfragment_Myorders">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content"
                    android:text="我的订单"
                    android:textSize="@dimen/my_item_textsize"
                    android:textColor="#000000"
                    android:layout_gravity="left"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/enter_black"
                    android:layout_gravity="right"/>

            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/fengexian"
                android:background="#c2c1c1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/myfragment_llpadding"
                android:layout_marginBottom="@dimen/myfragment_Ll_marginBottom"
                android:layout_marginTop="@dimen/myfragment_Ll_marginTop"
                android:id="@+id/Ll_myfragment_Myaddress">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:text="我的收货地址"
                    android:textColor="#000000"
                    android:layout_gravity="left"
                    android:textSize="@dimen/my_item_textsize"
                    android:gravity="left"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/enter_black" />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/fengexian"
                android:background="#c2c1c1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/myfragment_llpadding"
                android:layout_marginBottom="@dimen/myfragment_Ll_marginBottom"
                android:layout_marginTop="@dimen/myfragment_Ll_marginTop"
                android:id="@+id/Ll_myfragment_Aboutour">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:text="关于我们"
                    android:textSize="@dimen/my_item_textsize"
                    android:textColor="#000000"
                    android:layout_gravity="left"
                    android:gravity="left"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/enter_black" />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/fengexian"
                android:background="#c2c1c1"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>